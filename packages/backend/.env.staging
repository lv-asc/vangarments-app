# Staging Environment Configuration
NODE_ENV=staging
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://vangarments_admin:${DB_PASSWORD}@${DB_HOST}:5432/vangarments
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TLS=true

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
S3_IMAGES_BUCKET=vangarments-images-staging
S3_BACKUPS_BUCKET=vangarments-backups-staging
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# External Services
FRONTEND_URL=https://staging.vangarments.com
API_BASE_URL=https://api-staging.vangarments.com

# Security
CORS_ORIGIN=https://staging.vangarments.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
SENTRY_DSN=${SENTRY_DSN}

# Feature Flags
ENABLE_AI_PROCESSING=true
ENABLE_MARKETPLACE=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_BETA_FEATURES=true

# Payment Processing (Staging)
STRIPE_SECRET_KEY=${STRIPE_STAGING_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_STAGING_WEBHOOK_SECRET}

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=noreply@staging.vangarments.com