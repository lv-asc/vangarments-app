{
  "name": "@vangarments/backend",
  "version": "1.0.0",
  "description": "Vangarments backend API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "seed:vufs": "tsx src/scripts/seed-vufs-basic.ts",
    "lint": "eslint src/**/*.ts",
    "test:watch": "jest --watch",
    "test:cross-platform": "tsx tests/crossPlatform/testRunner.ts backend",
    "test:offline-sync": "jest --testPathPattern=offlineFunctionalitySync --runInBand",
    "test:batch-upload": "jest --testPathPattern=batchUploadProgress --runInBand",
    "test:compatibility": "jest --testPathPattern=crossPlatformCompatibility --runInBand",
    "test:smoke": "jest --testPathPattern=smoke --runInBand",
    "test:health": "jest --testPathPattern=health --runInBand",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:staging": "NODE_ENV=staging tsx src/scripts/migrate.ts up",
    "migrate:production": "NODE_ENV=production tsx src/scripts/migrate.ts up",
    "migrate:rollback": "tsx src/scripts/migrate.ts rollback",
    "migrate:status": "tsx src/scripts/migrate.ts status",
    "seed": "tsx src/scripts/seed.ts",
    "seed:sample": "tsx src/scripts/seed.ts sample",
    "create-admin": "tsx src/scripts/create-admin.ts",
    "create-admin:init": "tsx src/scripts/create-admin.ts create",
    "create-admin:grant": "tsx src/scripts/create-admin.ts grant",
    "create-admin:list": "tsx src/scripts/create-admin.ts list",
    "backup": "tsx src/scripts/backup.ts",
    "backup:create": "tsx src/scripts/backup.ts create",
    "backup:restore": "tsx src/scripts/backup.ts restore"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.18.0",
    "@google-cloud/vision": "^5.3.4",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.1",
    "psd": "^3.4.0",
    "sharp": "^0.34.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.4.2",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
