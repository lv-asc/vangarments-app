# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://vangarments_admin:${DB_PASSWORD}@${DB_HOST}:5432/vangarments
DATABASE_SSL=true
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TLS=true
REDIS_CLUSTER_MODE=true

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
S3_IMAGES_BUCKET=vangarments-images-production
S3_BACKUPS_BUCKET=vangarments-backups-production
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# External Services
FRONTEND_URL=https://vangarments.com
API_BASE_URL=https://api.vangarments.com

# Security
CORS_ORIGIN=https://vangarments.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=true

# Monitoring
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false
SENTRY_DSN=${SENTRY_DSN}
DATADOG_API_KEY=${DATADOG_API_KEY}

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Feature Flags
ENABLE_AI_PROCESSING=true
ENABLE_MARKETPLACE=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_BETA_FEATURES=false

# Payment Processing (Production)
STRIPE_SECRET_KEY=${STRIPE_PRODUCTION_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_PRODUCTION_WEBHOOK_SECRET}

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=noreply@vangarments.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
ENABLE_AUTOMATED_BACKUPS=true

# Compliance
ENABLE_LGPD_COMPLIANCE=true
DATA_RETENTION_DAYS=2555
ENABLE_AUDIT_LOGGING=true