# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vangarments

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback

# AWS Configuration (for existing features)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Server Configuration
PORT=3001
NODE_ENV=development

# Security Configuration
SECURITY_RATE_LIMIT_WINDOW_MS=900000
SECURITY_RATE_LIMIT_MAX_REQUESTS=100
SECURITY_AUTH_RATE_LIMIT_MAX=5
SECURITY_UPLOAD_RATE_LIMIT_MAX=20
SECURITY_DDOS_PROTECTION_ENABLED=true
SECURITY_GEOLOCATION_ENABLED=false
SECURITY_ALLOWED_COUNTRIES=BR,US
SECURITY_BOT_DETECTION_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_CSP_REPORT_ONLY=true
SECURITY_CSP_REPORT_URI=/api/security/csp-violation

# LGPD Compliance Configuration
LGPD_ENABLED=true
LGPD_DATA_RETENTION_DAYS=1825
LGPD_AUDIT_LOG_RETENTION_DAYS=2555
LGPD_CONSENT_REQUIRED=true
LGPD_DATA_MINIMIZATION_ENABLED=true
LGPD_CONTROLLER_NAME="Vangarments Ltda"
LGPD_CONTROLLER_EMAIL=privacy@vangarments.com
LGPD_DPO_EMAIL=dpo@vangarments.com

# Audit Logging Configuration
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_LEVEL=detailed
AUDIT_RETENTION_DAYS=2555
AUDIT_REAL_TIME_ALERTS_ENABLED=false
AUDIT_COMPLIANCE_REPORTING_ENABLED=true

# Security Monitoring Configuration
SECURITY_MONITORING_ENABLED=true
SECURITY_ALERT_FAILED_LOGIN_THRESHOLD=5
SECURITY_ALERT_RATE_LIMIT_THRESHOLD=10
SECURITY_ALERT_SUSPICIOUS_PATTERNS_THRESHOLD=3
SECURITY_ALERT_DDOS_REQUESTS_PER_MINUTE=100
SECURITY_ALERT_CHANNELS=console

# Encryption Configuration
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY_ROTATION_DAYS=90
BCRYPT_SALT_ROUNDS=12

# Session Security Configuration
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_MAX_AGE=86400000