# Database Configuration
DATABASE_URL=postgresql://lv@localhost:5432/vangarments

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-for-local-development
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_SECRET=dev-super-secret-session-key-for-local-development

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Server Configuration
PORT=3001
NODE_ENV=development

# Security Configuration (relaxed for development)
SECURITY_RATE_LIMIT_WINDOW_MS=900000
SECURITY_RATE_LIMIT_MAX_REQUESTS=1000
SECURITY_AUTH_RATE_LIMIT_MAX=50
SECURITY_UPLOAD_RATE_LIMIT_MAX=100
SECURITY_DDOS_PROTECTION_ENABLED=false
SECURITY_GEOLOCATION_ENABLED=false
SECURITY_BOT_DETECTION_ENABLED=false
SECURITY_CSP_ENABLED=false
SECURITY_CSP_REPORT_ONLY=true

# LGPD Compliance Configuration (simplified for development)
LGPD_ENABLED=false
LGPD_CONSENT_REQUIRED=false

# Audit Logging Configuration (simplified for development)
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_LEVEL=basic
AUDIT_RETENTION_DAYS=30

# Security Monitoring Configuration (relaxed for development)
SECURITY_MONITORING_ENABLED=false

# Encryption Configuration
ENCRYPTION_ALGORITHM=aes-256-gcm
BCRYPT_SALT_ROUNDS=10

# Session Security Configuration (relaxed for development)
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_MAX_AGE=86400000